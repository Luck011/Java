import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Lendo uma linha completa de texto
        System.out.print("Digite seu nome: ");
        String nome = scanner.nextLine();

        // Lendo um número inteiro
        System.out.print("Digite sua idade: ");
        int idade = scanner.nextInt();

        // Lendo um número decimal
        System.out.print("Digite seu peso (em kg): ");
        double peso = scanner.nextDouble();

        // Lendo um valor booleano
        System.out.print("Você gosta de programação? (true/false): ");
        boolean gostaProgramacao = scanner.nextBoolean();

        // Exibindo os valores lidos
        System.out.println("Nome: " + nome);
        System.out.println("Idade: " + idade);
        System.out.println("Peso: " + peso + " kg");
        System.out.println("Gosta de programação: " + gostaProgramacao);

        scanner.close();
    }
}
